[puppetlabs-pc1]
name=Puppet Labs PC1 Repository <%= @dist.capitalize -%> <%= @version -%> - $basearch
baseurl=http://yum.puppetlabs.com/<%= @dist.downcase -%>/<%= @codename -%>/PC1/$basearch
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-puppetlabs
enabled=1
gpgcheck=1

[puppetlabs-pc1-source]
name=Puppet Labs PC1 Repository <%= @dist.capitalize -%> <%= @version -%> - $basearch - Source
baseurl=http://yum.puppetlabs.com/<%= @dist.downcase -%>/<%= @codename -%>/PC1/SRPMS
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-puppetlabs
failovermethod=priority
enabled=0
gpgcheck=1

